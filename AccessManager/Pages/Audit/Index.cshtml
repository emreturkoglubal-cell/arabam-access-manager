@page
@model AccessManager.Pages.Audit.IndexModel
@{
    ViewData["Title"] = "Denetim Kaydı";
}

<h1 class="mb-4">Denetim Kaydı (Audit Log)</h1>

<form method="get" class="row g-2 mb-4">
    <div class="col-auto">
        <select name="targetType" class="form-select form-select-sm" asp-for="FilterTargetType">
            <option value="">Tümü</option>
            <option value="Personnel">Personel</option>
            <option value="Access">Erişim</option>
            <option value="AccessRequest">Yetki talebi</option>
        </select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-sm btn-primary">Filtrele</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-sm table-hover">
        <thead class="table-light">
            <tr>
                <th>Tarih</th>
                <th>İşlem</th>
                <th>Yapan</th>
                <th>Hedef</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.Logs)
            {
                <tr>
                    <td>@log.Timestamp.ToString("dd.MM.yyyy HH:mm:ss")</td>
                    <td>@log.Action</td>
                    <td>@log.ActorName</td>
                    <td>@log.TargetType @(log.TargetId != null ? $"({log.TargetId})" : "")</td>
                    <td>@(log.Details ?? "-")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Logs.Any())
{
    <p class="text-muted">Kayıt bulunamadı.</p>
}
