@page
@model AccessManager.Pages.Offboarding.IndexModel
@{
    ViewData["Title"] = "İşten Çıkış";
}

<h1 class="mb-4">İşten Çıkış (Offboarding)</h1>

<p class="text-muted">Personel için çıkış tarihi girerek tüm yetkileri kapatın.</p>

<form method="post" class="row g-3">
    <div class="col-12">
        <label asp-for="SelectedPersonnelId" class="form-label">Personel *</label>
        <select asp-for="SelectedPersonnelId" class="form-select" required>
            <option value="">Seçiniz</option>
            @foreach (var p in Model.ActivePersonnel)
            {
                <option value="@p.Id">@p.FirstName @p.LastName (#@p.Id)</option>
            }
        </select>
    </div>
    <div class="col-md-6">
        <label asp-for="EndDate" class="form-label">Çıkış tarihi</label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    <div class="col-12">
        <div asp-validation-summary="All" class="text-danger"></div>
        <button type="submit" class="btn btn-danger">İşten çıkış işlemini uygula</button>
        <a asp-page="/Personnel/Index" class="btn btn-secondary">İptal</a>
    </div>
</form>
