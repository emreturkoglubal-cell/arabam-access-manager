<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AccessManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AccessManager.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-page="/Index">AccessManager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Menü">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Personnel/Index">Personel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Departments/Index">Departmanlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Systems/Index">Uygulamalar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Roles/Index">Roller & Yetkiler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/AccessRequests/Index">Yetki Talepleri</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Onboarding/Index">İşe Giriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Offboarding/Index">İşten Çıkış</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Reports/Index">Raporlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Audit/Index">Denetim Kaydı</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted py-2">
        <div class="container">
            &copy; @DateTime.Now.Year - AccessManager - Yetki ve Erişim Yönetim Sistemi
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
