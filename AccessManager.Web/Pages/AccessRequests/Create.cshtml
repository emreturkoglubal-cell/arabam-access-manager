@page
@model AccessManager.UI.Pages.AccessRequests.CreateModel
@using AccessManager.Domain.Enums
@{
    ViewData["Title"] = "Yeni Yetki Talebi";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/AccessRequests/Index">Yetki Talepleri</a></li>
        <li class="breadcrumb-item active">Yeni talep</li>
    </ol>
</nav>

<h1 class="mb-4">Yeni Yetki Talebi</h1>

<form method="post" class="row g-3">
    <div class="col-12">
        @if (Model.PreselectedPerson != null)
        {
            <label class="form-label">Personel</label>
            <p class="fw-semibold mb-0">@Model.PreselectedPerson.FirstName @Model.PreselectedPerson.LastName (#@Model.PreselectedPerson.Id)</p>
            <input type="hidden" asp-for="Input.PersonnelId" />
        }
        else
        {
            <label asp-for="Input.PersonnelId" class="form-label">Personel *</label>
            <select asp-for="Input.PersonnelId" class="form-select" required>
                <option value="">Seçiniz</option>
                @foreach (var p in Model.PersonnelList)
                {
                    <option value="@p.Id">@p.FirstName @p.LastName (#@p.Id)</option>
                }
            </select>
        }
    </div>
    <div class="col-12">
        <label asp-for="Input.ResourceSystemId" class="form-label">Sistem *</label>
        <select asp-for="Input.ResourceSystemId" class="form-select" required>
            <option value="">Seçiniz</option>
            @foreach (var s in Model.Systems)
            {
                <option value="@s.Id">@s.Name (@s.Code)</option>
            }
        </select>
    </div>
    <div class="col-md-6">
        <label asp-for="Input.RequestedPermission" class="form-label">Yetki</label>
        <select asp-for="Input.RequestedPermission" class="form-select">
            <option value="@PermissionType.Open">Açık</option>
            <option value="@PermissionType.Closed">Kapalı</option>
        </select>
    </div>
    <div class="col-md-6">
        <label asp-for="Input.EndDate" class="form-label">Bitiş tarihi (opsiyonel, süreli yetki)</label>
        <input asp-for="Input.EndDate" class="form-control" type="date" />
    </div>
    <div class="col-12">
        <label asp-for="Input.Reason" class="form-label">Sebep</label>
        <textarea asp-for="Input.Reason" class="form-control" rows="2"></textarea>
    </div>
    <div class="col-12">
        <div asp-validation-summary="All" class="text-danger"></div>
        <button type="submit" class="btn btn-primary">Talep oluştur</button>
        <a asp-page="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>
