@page
@model AccessManager.UI.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Raporlar";
}

<h5 class="mt-0 mb-3">Sisteme göre aktif erişim sayıları</h5>
<div class="am-table-wrap">
    <table class="am-table">
        <thead>
            <tr>
                <th>Sistem</th>
                <th>Kod</th>
                <th>Aktif erişim</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.AccessBySystem != null && Model.AccessBySystem.Any())
            {
                @foreach (var r in Model.AccessBySystem)
                {
                    <tr>
                        <td>@(r.SystemName ?? "—")</td>
                        <td>@(r.SystemCode ?? "—")</td>
                        <td>@r.ActiveAccessCount</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="3" class="text-muted">Kayıt yok.</td></tr>
            }
        </tbody>
    </table>
</div>

<h5 class="mt-4 mb-3">İşten çıkanlar</h5>
<div class="am-table-wrap">
    <table class="am-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad Soyad</th>
                <th>Çıkış tarihi</th>
                <th>Departman</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.OffboardedReport != null && Model.OffboardedReport.Any())
            {
                @foreach (var r in Model.OffboardedReport)
                {
                    <tr>
                        <td>@(r.PersonnelId)</td>
                        <td><a asp-page="/Personnel/Detail" asp-route-id="@r.PersonnelId">@(r.FullName ?? "—")</a></td>
                        <td>@(r.EndDate?.ToString("dd.MM.yyyy") ?? "—")</td>
                        <td>@(r.Department ?? "—")</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="4" class="text-muted">Kayıt yok.</td></tr>
            }
        </tbody>
    </table>
</div>

<h5 class="mt-4 mb-3">Rol dışı yetkiler (Exception)</h5>
<div class="am-table-wrap">
    <table class="am-table">
        <thead>
            <tr>
                <th>Personel</th>
                <th>ID</th>
                <th>Sistem</th>
                <th>Yetki</th>
                <th>Bitiş tarihi</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ExceptionReport != null && Model.ExceptionReport.Any())
            {
                @foreach (var r in Model.ExceptionReport)
                {
                    <tr>
                        <td><a asp-page="/Personnel/Detail" asp-route-id="@r.PersonnelId">@(r.Person ?? "—")</a></td>
                        <td>@(r.PersonnelId)</td>
                        <td>@(r.System ?? "—")</td>
                        <td>@(r.Permission ?? "—")</td>
                        <td>@(r.ExpiresAt?.ToString("dd.MM.yyyy") ?? "—")</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5" class="text-muted">Kayıt yok.</td></tr>
            }
        </tbody>
    </table>
</div>
