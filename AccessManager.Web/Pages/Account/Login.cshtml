@page
@model AccessManager.UI.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Giriş";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş - AccessManager</title>
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/favicon-32x32.png" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>
<body class="am-login-page">
    <div class="am-login-card">
        <div class="header">
            <img src="~/images/favicon-32x32.png" alt="AccessManager" class="am-login-logo" asp-append-version="true" /> AccessManager
        </div>
        <div class="body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                <div class="mb-3">
                    <label asp-for="Input.UserName" class="form-label">Kullanıcı adı</label>
                    <input asp-for="Input.UserName" class="form-control" placeholder="Kullanıcı adınız" autofocus autocomplete="username" />
                    <span asp-validation-for="Input.UserName" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Parola</label>
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="••••••••" autocomplete="current-password" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Beni hatırla</label>
                </div>
                <button type="submit" class="btn btn-am-primary">Giriş yap</button>
            </form>
            <p class="demo-hint mb-0">
                Demo: <strong>admin</strong> / Password1 · <strong>manager</strong> / Password1 · <strong>user</strong> / Password1 · <strong>auditor</strong> / Password1 · <strong>viewer</strong> / Password1
            </p>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
