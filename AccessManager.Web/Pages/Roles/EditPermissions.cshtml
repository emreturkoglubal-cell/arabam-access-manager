@page
@model AccessManager.UI.Pages.Roles.EditPermissionsModel
@using AccessManager.Domain.Enums
@using AccessManager.UI.Helpers
@{
    ViewData["Title"] = "Rol yetkileri";
}

<div class="am-page-title">Yetkiler: @(Model.Role?.Name ?? "")</div>

<div class="row">
    <div class="col-lg-6">
        <div class="am-card mb-4">
            <div class="am-card-header">Yeni yetki ekle</div>
            <div class="am-card-body">
                <form method="post" asp-page-handler="Add" asp-route-id="@Model.Role?.Id">
                    <div class="row g-2">
                        <div class="col-12">
                            <label class="form-label">Sistem</label>
                            <select asp-for="AddPermission.ResourceSystemId" class="form-select" required>
                                <option value="">Seçin</option>
                                @foreach (var s in Model.Systems)
                                {
                                    <option value="@s.Id">@s.Name (@(s.Code ?? ""))</option>
                                }
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Yetki</label>
                            <select asp-for="AddPermission.PermissionType" class="form-select">
                                <option value="@PermissionType.Open">Açık</option>
                                <option value="@PermissionType.Closed">Kapalı</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input asp-for="AddPermission.IsDefault" class="form-check-input" />
                                <label asp-for="AddPermission.IsDefault" class="form-check-label">Varsayılan (işe girişte atanır)</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-am-primary">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="am-card">
            <div class="am-card-header">Mevcut yetkiler</div>
            <div class="am-card-body p-0">
                @if (Model.Permissions != null && Model.Permissions.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var p in Model.Permissions)
                        {
                            var sysName = Model.SystemNames.GetValueOrDefault(p.ResourceSystemId, p.ResourceSystemId.ToString());
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@sysName — @StatusLabels.PermissionTypeLabel(p.PermissionType) @(p.IsDefault ? "(varsayılan)" : "")</span>
                                <form method="post" asp-page-handler="Remove" asp-route-id="@Model.Role?.Id" asp-route-permissionId="@p.Id" class="d-inline" data-am-confirm="Bu yetki kaldırılsın mı?">
                                    <button type="submit" class="btn btn-am-ghost text-danger py-0">Kaldır</button>
                                </form>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted mb-0 p-3">Bu role ait yetki tanımı yok. Yukarıdan ekleyebilirsiniz.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-page="Edit" asp-route-id="@Model.Role?.Id" class="btn btn-am-ghost">Rol bilgilerini düzenle</a>
    <a asp-page="Index" class="btn btn-am-ghost">Listeye dön</a>
</div>
