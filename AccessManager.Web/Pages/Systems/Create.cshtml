@page
@model AccessManager.UI.Pages.Systems.CreateModel
@using AccessManager.Domain.Enums
@{
    ViewData["Title"] = "Yeni Sistem";
}

<div class="am-page-title">Yeni Sistem</div>

<div class="am-card am-card--narrow">
    <div class="am-card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
            <div class="mb-3">
                <label asp-for="Input.Name" class="form-label">Sistem adı <span class="text-danger">*</span></label>
                <input asp-for="Input.Name" class="form-control" placeholder="Örn. Jira" />
                <span asp-validation-for="Input.Name" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Code" class="form-label">Kod</label>
                <input asp-for="Input.Code" class="form-control" placeholder="Örn. JIRA" />
            </div>
            <div class="mb-3">
                <label asp-for="Input.SystemType" class="form-label">Tür</label>
                <select asp-for="Input.SystemType" class="form-select" asp-items="Html.GetEnumSelectList<SystemType>()"></select>
            </div>
            <div class="mb-3">
                <label asp-for="Input.CriticalLevel" class="form-label">Kritik seviye</label>
                <select asp-for="Input.CriticalLevel" class="form-select" asp-items="Html.GetEnumSelectList<CriticalLevel>()"></select>
            </div>
            <div class="mb-3">
                <label asp-for="Input.OwnerId" class="form-label">Sistem sahibi (personel)</label>
                <select asp-for="Input.OwnerId" class="form-select">
                    <option value="@Guid.Empty">— Seçin —</option>
                    @foreach (var p in Model.PersonnelList)
                    {
                        <option value="@p.Id">@p.FirstName @p.LastName (@(p.SicilNo))</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Description" class="form-label">Açıklama</label>
                <textarea asp-for="Input.Description" class="form-control" rows="2" placeholder="İsteğe bağlı"></textarea>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-am-primary">Oluştur</button>
                <a asp-page="Index" class="btn btn-am-ghost">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
