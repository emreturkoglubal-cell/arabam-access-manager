@page
@model AccessManager.UI.Pages.Systems.DeleteModel
@{
    ViewData["Title"] = "Sistem sil";
}

<div class="am-page-title">Sistem sil</div>

@if (Model.DeleteFailed)
{
    <div class="alert alert-warning am-card mb-4">
        @Model.DeleteFailedMessage
        <div class="mt-2">
            <a asp-page="Index" class="btn btn-am-outline btn-am-outline-solid">Listeye dön</a>
        </div>
    </div>
}
else
{
    <div class="am-card am-card--narrow-sm">
        <div class="am-card-body">
            <p class="mb-3"><strong>@(Model.System?.Name)</strong> (@(Model.System?.Code ?? "-")) sistemini silmek istediğinize emin misiniz? Yetki talebi, rol yetkisi veya personel erişiminde kullanılıyorsa silme işlemi yapılamaz.</p>
            <form method="post" asp-route-id="@Model.System?.Id">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-am-primary btn-am-danger">Evet, sil</button>
                    <a asp-page="Index" class="btn btn-am-ghost">İptal</a>
                </div>
            </form>
        </div>
    </div>
}
