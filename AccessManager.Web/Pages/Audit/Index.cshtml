@page
@model AccessManager.UI.Pages.Audit.IndexModel
@{
    ViewData["Title"] = "Log";
}

<div class="am-toolbar">
    <form method="get" class="d-flex flex-wrap gap-2 align-items-center">
        <select name="targetType" class="form-select form-select-sm am-toolbar-select am-toolbar-select--sm" asp-for="FilterTargetType">
            <option value="">Tümü</option>
            <option value="Personnel">Personel</option>
            <option value="Access">Erişim</option>
            <option value="AccessRequest">Yetki talebi</option>
        </select>
        <button type="submit" class="btn btn-am-outline btn-am-outline-solid">Filtrele</button>
    </form>
</div>

<div class="am-table-wrap">
    <table class="am-table">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>İşlem</th>
                <th>Yapan</th>
                <th>Hedef</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.Logs)
            {
                <tr>
                    <td>@log.Timestamp.ToString("dd.MM.yyyy HH:mm:ss")</td>
                    <td>@log.Action</td>
                    <td>@log.ActorName</td>
                    <td>@log.TargetType @(log.TargetId != null ? $"({log.TargetId})" : "")</td>
                    <td>@(log.Details ?? "—")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Logs.Any())
{
    <p class="text-muted mt-3">Kayıt bulunamadı.</p>
}
