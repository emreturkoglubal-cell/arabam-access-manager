@using AccessManager.Domain.Constants
@using AccessManager.Domain.Enums
@using AccessManager.Domain.Entities
@{
    ViewData["Title"] = "Uygulamalar";
    var systems = ViewBag.Systems as IReadOnlyList<ResourceSystem> ?? new List<ResourceSystem>();
    var ownerNames = ViewBag.OwnerNames as Dictionary<int, string> ?? new Dictionary<int, string>();
    var accessCounts = ViewBag.AccessCounts as Dictionary<int, int> ?? new Dictionary<int, int>();
}

@if (User.IsInRole(AppRoleNames.Admin))
{
    <div class="am-toolbar mb-4">
        <div class="am-toolbar-end">
            <a asp-controller="Systems" asp-action="Create" class="btn btn-am-primary">Yeni Sistem</a>
        </div>
    </div>
}

<div class="am-card">
    <div class="am-card-body p-0">
        <div class="am-table-wrap">
            <table class="am-table am-table-rows-clickable">
                <thead>
                    <tr>
                        <th>Kod</th>
                        <th>Ad</th>
                        <th>Tür</th>
                        <th>Kritik seviye</th>
                        <th>Sahip</th>
                        <th>Aktif erişim sayısı</th>
                        @if (User.IsInRole(AppRoleNames.Admin))
                        {
                            <th class="am-table-col-actions--wide"></th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in systems)
                    {
                        var editUrl = Url.Action("Edit", "Systems", new { id = s.Id }) ?? "#";
                        <tr class="am-table-row-clickable" data-href="@editUrl" role="button" tabindex="0">
                            <td>@(s.Code ?? "-")</td>
                            <td>@s.Name</td>
                            <td>@s.SystemType</td>
                            <td><span class="badge bg-@(s.CriticalLevel == CriticalLevel.High ? "danger" : s.CriticalLevel == CriticalLevel.Medium ? "warning" : "secondary")">@s.CriticalLevel</span></td>
                            <td>@(ownerNames.TryGetValue(s.Id, out var owner) ? owner : "-")</td>
                            <td>@(accessCounts.TryGetValue(s.Id, out var cnt) ? cnt : 0)</td>
                            @if (User.IsInRole(AppRoleNames.Admin))
                            {
                                <td class="am-table-col-actions" onclick="event.stopPropagation();">
                                    <div class="d-flex flex-nowrap gap-2">
                                        <a asp-controller="Systems" asp-action="Edit" asp-route-id="@s.Id" class="btn btn-am-outline btn-am-outline-solid btn-sm">Düzenle</a>
                                        <a asp-controller="Systems" asp-action="Delete" asp-route-id="@s.Id" class="btn btn-am-outline-danger btn-sm">Sil</a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!systems.Any())
        {
            <p class="text-muted mb-0 p-3">Henüz sistem tanımlanmamış.</p>
        }
    </div>
</div>
