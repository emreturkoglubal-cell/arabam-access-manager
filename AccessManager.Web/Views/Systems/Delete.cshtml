@using AccessManager.Domain.Entities
@{
    ViewData["Title"] = "Sistem sil";
    var system = ViewBag.System as ResourceSystem;
    var deleteFailed = ViewBag.DeleteFailed as bool? ?? false;
    var deleteFailedMessage = ViewBag.DeleteFailedMessage as string;
}

@if (deleteFailed)
{
    <div class="alert alert-warning am-card mb-4">
        @deleteFailedMessage
        <div class="mt-2">
            <a asp-controller="Systems" asp-action="Index" class="btn btn-am-outline btn-am-outline-solid">Listeye dön</a>
        </div>
    </div>
}
else
{
    <div class="am-card am-card--narrow-sm">
        <div class="am-card-body">
            <p class="mb-3"><strong>@(system?.Name)</strong> (@(system?.Code ?? "-")) sistemini silmek istediğinize emin misiniz?</p>
            <form method="post" asp-controller="Systems" asp-action="Delete" asp-route-id="@system?.Id">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-am-primary btn-am-danger">Evet, sil</button>
                    <a asp-controller="Systems" asp-action="Index" class="btn btn-am-ghost">İptal</a>
                </div>
            </form>
        </div>
    </div>
}
