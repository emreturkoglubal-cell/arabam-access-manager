@model AccessManager.UI.Controllers.AssetReturnInputModel
@using AccessManager.Domain.Entities
@{
    ViewData["Title"] = "Donanım iade";
    var assignment = ViewBag.Assignment as AssetAssignment;
    var asset = ViewBag.Asset as Asset;
    var personnelName = ViewBag.PersonnelName as string ?? "—";
}
@if (assignment == null || asset == null) { return; }

<div class="am-card am-card--narrow">
    <div class="am-card-body">
        <p class="mb-3">Zimmetteki kişi: <strong>@personnelName</strong>. Zimmet tarihi: @assignment.AssignedAt.ToString("dd.MM.yyyy").</p>
        <form method="post" asp-controller="Assets" asp-action="Return">
            <input type="hidden" asp-for="AssignmentId" />
            <div class="mb-3">
                <label asp-for="ReturnCondition" class="form-label">İade durumu</label>
                <input asp-for="ReturnCondition" class="form-control" placeholder="Örn. İyi, Hasarlı" />
            </div>
            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Not</label>
                <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-am-primary">İade al</button>
                <a asp-controller="Assets" asp-action="Index" class="btn btn-am-ghost">İptal</a>
            </div>
        </form>
    </div>
</div>
