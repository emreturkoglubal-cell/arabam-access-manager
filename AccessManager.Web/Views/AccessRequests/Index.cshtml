@using AccessManager.Domain.Entities
@using AccessManager.Domain.Enums
@{
    ViewData["Title"] = "Yetki Talepleri";
    var requests = ViewBag.Requests as IReadOnlyList<AccessRequest> ?? new List<AccessRequest>();
    var personNames = ViewBag.PersonNames as Dictionary<int, string> ?? new Dictionary<int, string>();
    var systemNames = ViewBag.SystemNames as Dictionary<int, string> ?? new Dictionary<int, string>();
    var filterStatus = ViewBag.FilterStatus as string;
}

<div class="am-toolbar">
    <form method="get" asp-controller="AccessRequests" asp-action="Index" class="d-flex flex-wrap gap-2 align-items-center">
        <select name="status" class="form-select form-select-sm am-toolbar-select am-toolbar-select--wide">
            <option value="" selected="@(string.IsNullOrEmpty(filterStatus))">Tüm durumlar</option>
            <option value="PendingManager" selected="@(filterStatus == "PendingManager")">Yönetici onayı bekliyor</option>
            <option value="PendingSystemOwner" selected="@(filterStatus == "PendingSystemOwner")">Sistem sahibi onayı bekliyor</option>
            <option value="PendingIT" selected="@(filterStatus == "PendingIT")">IT onayı bekliyor</option>
            <option value="Approved" selected="@(filterStatus == "Approved")">Onaylandı</option>
            <option value="Applied" selected="@(filterStatus == "Applied")">Uygulandı</option>
            <option value="Rejected" selected="@(filterStatus == "Rejected")">Reddedildi</option>
        </select>
        <button type="submit" class="btn btn-am-outline btn-am-outline-solid">Filtrele</button>
    </form>
    <div class="am-toolbar-end">
        <a asp-controller="AccessRequests" asp-action="Create" class="btn btn-am-primary">Yeni Talep</a>
    </div>
</div>

<div class="am-table-wrap">
    <table class="am-table am-table-rows-clickable">
        <thead>
            <tr>
                <th>Talep eden</th>
                <th>Sistem</th>
                <th>Yetki</th>
                <th>Sebep</th>
                <th>Süre</th>
                <th>Durum</th>
                <th>Tarih</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in requests)
            {
                var personName = personNames.TryGetValue(r.PersonnelId, out var pn) ? pn : "—";
                var sysName = systemNames.TryGetValue(r.ResourceSystemId, out var sn) ? sn : "—";
                var detailUrl = Url.Action("Detail", "AccessRequests", new { id = r.Id }) ?? "#";
                <tr class="am-table-row-clickable" data-href="@detailUrl" role="button" tabindex="0">
                    <td><strong>@personName</strong></td>
                    <td>@sysName</td>
                    <td>@r.RequestedPermission</td>
                    <td>@(r.Reason ?? "—")</td>
                    <td>@(r.EndDate.HasValue ? r.CreatedAt.ToString("dd.MM.yy") + " – " + r.EndDate?.ToString("dd.MM.yy") : "Süresiz")</td>
                    <td>
                        <span class="am-badge @(r.Status == AccessRequestStatus.Applied ? "success" : r.Status == AccessRequestStatus.Rejected ? "danger" : "warning")">@StatusLabels.AccessRequestStatus(r.Status)</span>
                    </td>
                    <td>@r.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
