@model AccessManager.UI.ViewModels.AuditIndexViewModel
@using AccessManager.Domain.Entities
@using AccessManager.Domain.Enums
@{
    ViewData["Title"] = "Log";
}

<div class="am-page-title">Log</div>

<div class="am-toolbar">
    <form method="get" asp-controller="Audit" asp-action="Index" class="d-flex flex-wrap gap-2 align-items-center">
        <input type="hidden" name="pageSize" value="@Model.PageSize" />
        <select name="targetType" class="form-select form-select-sm am-toolbar-select am-toolbar-select--sm" asp-for="FilterTargetType">
            <option value="">Tümü</option>
            <option value="Personnel">Personel</option>
            <option value="Access">Erişim</option>
            <option value="AccessRequest">Yetki talebi</option>
        </select>
        <button type="submit" class="btn btn-am-outline btn-am-outline-solid">Filtrele</button>
    </form>
</div>

<div class="am-card">
    <div class="am-card-body p-0">
        <div class="am-table-wrap">
            <table class="am-table">
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>İşlem</th>
                        <th>Yapan</th>
                        <th>Hedef</th>
                        <th>Detay</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.Logs)
                    {
                        <tr>
                            <td>@log.Timestamp.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            <td>@StatusLabels.AuditActionLabel(log.Action)</td>
                            <td>@log.ActorName</td>
                            <td>@StatusLabels.AuditTargetType(log.TargetType) @(log.TargetId != null ? $"({log.TargetId})" : "")</td>
                            <td>@(log.Details ?? "—")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Logs.Any())
        {
            <p class="text-muted mb-0 p-3">Kayıt bulunamadı.</p>
        }
        else
        {
            var auditPaginationRv = new Microsoft.AspNetCore.Routing.RouteValueDictionary { { "pageSize", Model.PageSize } };
            if (!string.IsNullOrEmpty(Model.FilterTargetType)) auditPaginationRv["targetType"] = Model.FilterTargetType;
            @await Html.PartialAsync("_Pagination", new AccessManager.UI.ViewModels.PaginationViewModel
            {
                Controller = "Audit",
                Action = "Index",
                PageNumber = Model.PageNumber,
                TotalPages = Model.TotalPages,
                TotalCount = Model.TotalCount,
                PageSize = Model.PageSize,
                RouteValues = auditPaginationRv
            })
        }
    </div>
</div>
