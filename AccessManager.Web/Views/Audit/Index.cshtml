@using AccessManager.Domain.Entities
@using AccessManager.Domain.Enums
@{
    ViewData["Title"] = "Log";
    var logs = ViewBag.Logs as IReadOnlyList<AuditLog> ?? new List<AuditLog>();
    var filterTargetType = ViewBag.FilterTargetType as string;
}

<div class="am-page-title">Log</div>

<div class="am-toolbar">
    <form method="get" asp-controller="Audit" asp-action="Index" class="d-flex flex-wrap gap-2 align-items-center">
        <select name="targetType" class="form-select form-select-sm am-toolbar-select am-toolbar-select--sm">
            <option value="" selected="@(string.IsNullOrEmpty(filterTargetType))">Tümü</option>
            <option value="Personnel" selected="@(filterTargetType == "Personnel")">Personel</option>
            <option value="Access" selected="@(filterTargetType == "Access")">Erişim</option>
            <option value="AccessRequest" selected="@(filterTargetType == "AccessRequest")">Yetki talebi</option>
        </select>
        <button type="submit" class="btn btn-am-outline btn-am-outline-solid">Filtrele</button>
    </form>
</div>

<div class="am-card">
    <div class="am-card-body p-0">
        <div class="am-table-wrap">
            <table class="am-table">
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>İşlem</th>
                        <th>Yapan</th>
                        <th>Hedef</th>
                        <th>Detay</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in logs)
                    {
                        <tr>
                            <td>@log.Timestamp.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            <td>@StatusLabels.AuditActionLabel(log.Action)</td>
                            <td>@log.ActorName</td>
                            <td>@StatusLabels.AuditTargetType(log.TargetType) @(log.TargetId != null ? $"({log.TargetId})" : "")</td>
                            <td>@(log.Details ?? "—")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!logs.Any())
        {
            <p class="text-muted mb-0 p-3">Kayıt bulunamadı.</p>
        }
    </div>
</div>
